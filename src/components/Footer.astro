<style>
    .skewed {
        position: absolute;
        top: 0;
        bottom: 0;
        right: 0;
        left: 0;
        width: 100%;
        height: 100%;
        /* background-image: url("src/assets/lagos.png"); */
        background: #CFC9BD;
        z-index:0;
        transform: skewY(4deg);
        transform-origin: top right;
    }
</style>